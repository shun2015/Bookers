<body>
  <h1>Editing Book</h1>
  <!-- form_with部分 -->
  <%= form_with model:@book, local:true do |f| %>
  <% if @book.errors.any? %>
    <div class="alert-danger">
      <h3><%= @book.errors.count %> errors prohibited this book from being saved:</h3>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
      </div>
  <% end %>
  <div class="edit">
    <p>Title</p>
    <%= f.text_field :title %>
  </div>
  <div class="edit">
    <p>Body</p>
    <span><%= f.text_area :body %></span>
    </div>
    <div class="submit">
    <%= f.submit 'Update Book',:style => "margin:10px 0 10px 0;" %>
  </div>
    <%= link_to "Show", book_path(@book) %>
    |
    <%= link_to "Back", "/books" %>
  </div>
  <% end %>
</body>