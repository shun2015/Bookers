<body>
  <p id="notice">
      <%= notice %>
  </p>
  <div class="book-list">
    <h1>Books</h1>
    <table>
      <tr>
        <th>Title</th>
        <th>Body</th>
      </tr>
      <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book) %></td>
        <td><%= link_to "Edit", edit_book_path(book) %></td>
        <td><%= link_to "Destroy", book_path(book), method: :delete, data: { confirm: "Are you sure?" } %></td>
      <% end %>
      </tr>
    </table>
  </div>
  
  <div class="new">
    <h1>New book</h1>
    <!-- form_with部分 -->
    <%= form_with model:@book, local: true do |f| %>
    <% if @book.errors.any? %>
    <div class="alert-danger">
      <h3><%= @book.errors.count %> errors prohibited this book from being saved:</h3>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
      </div>
    <% end %>
      <div class="new-text">
        <h4>Title</h4>
        <%= f.text_field :title %>
      </div>
      <div class="new-text">
        <h4>Body</h4>
        <%= f.text_area :body %>
      </div>
      <div class="submit">
        <%= f.submit 'Create Book' %>
      </div>
    <% end %>
  </div>
</body>